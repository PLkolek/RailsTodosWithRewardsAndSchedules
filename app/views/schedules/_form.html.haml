= form_for @schedule do |f|
  - if @schedule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@schedule.errors.count, "error")} prohibited this schedule from being saved:"
      %ul
        - @schedule.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :from
    = f.time_select :from
  .field
    = f.label :to
    = f.time_select :to
  .field
    = f.label :day_of_week
    = f.text_field :day_of_week
  .actions
    = f.submit 'Save'
