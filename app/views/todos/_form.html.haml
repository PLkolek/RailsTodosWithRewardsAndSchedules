= form_for @todo do |f|
  - if @todo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo.errors.count, "error")} prohibited this todo from being saved:"
      %ul
        - @todo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  = f.fields_for :reward do |fr|
    .field
      = fr.label :title
      = fr.text_field :title
    .field
      = fr.label :description
      = fr.text_area :description
  .actions
    = f.submit 'Save'
